{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "domains": {
      "react": "all"
    },
    "rules": {
      "recommended": true,
      "complexity": {
        "useSimplifiedLogicExpression": "info"
      },
      "correctness": {
        "noNestedComponentDefinitions": "error",
        "noUndeclaredVariables": "error"
      },
      "style": {
        "noUselessElse": "error",
        "useConsistentCurlyBraces": "error",
        "useDefaultParameterLast": "error",
        "useDefaultSwitchClause": "error",
        "useFilenamingConvention": {
          "level": "info",
          "options": { "filenameCases": ["camelCase", "PascalCase", "export"] }
        },
        "useObjectSpread": "info",
        "noNestedTernary": "error",
        "noParameterAssign": "error",
        "useSelfClosingElements": "info",
        "useShorthandAssign": "info"
      },
      "suspicious": {
        "useAwait": "warn",
        "useErrorMessage": "error"
      }
    }
  },
  "javascript": {
    "parser": {
      "jsxEverywhere": false
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "asNeeded",
      "lineWidth": 100,
      "operatorLinebreak": "before"
    }
  },
  "json": {
    "formatter": {
      "lineWidth": 100
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "lineWidth": 100
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
